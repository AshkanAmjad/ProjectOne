@model IEnumerable<Domain.Entities.Security.Model.Role>

@{
    ViewBag.Title = "DisplayRoles";
}

@section style{
    <style>
        a {
            text-decoration: none;
        }

        #delete a {
            color: white
        }

        .add-form {
            display: none;
        }

        .edit-form {
            display: none;
        }

        .add-btn {
            margin: 1rem 2rem 1rem 0;
            width: 10rem;
            font-weight: bold;
        }

        .edit-btn {
            font-weight: bold;
            margin-right: 1rem;
        }

        .delete-btn {
            font-weight: bold;
        }

        .panel-heading-custom {
            font-weight: bold;
        }

        .close-btn {
            cursor: pointer;
            color: red;
            position: absolute;
            right: 10px;
        }

        .panel-custom {
            width: 30%;
            position: absolute;
        }

        .btn-Roles {
            margin: 1rem 2rem 1rem 0;
            width: 10rem;
            font-weight: bold;
        }

        .btn-icons {
            margin-right: 1rem;
        }

        .justify-content-center {
            display: flex;
            justify-content: center;
        }

        .alert-custom {
            margin: 0 auto;
            width: 50%;
        }
    </style>
}
<div class="btn btn-primary btn-sm btn-Roles">
    <i class="fa fa-users btn-icons"></i>
    Roles
</div>

<hr />
<div class="btn btn-primary btn-sm add-btn" onclick="AddRole()">
    <i class="fa fa-plus btn-icons"></i>
    Add
</div>

@*if (ViewBag.roleExistMessage)*@
@if (Model != null && Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:50%;margin:0 auto;">
        <thead>
            <tr>
                <th scope="col" class="text-center">Title</th>
                <th scope="col" class="text-center">Operations</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>
                        <div style="display:flex;justify-content:center;" onclick="EditRole()">
                            <div class="btn btn-warning edit-btn">
                                <i class="fa fa-edit btn-icons"></i>
                                Edit
                            </div>

                            <div class="btn btn-danger delete-btn" id="delete">
                                <i class="fa fa-times btn-icons"></i>
                                @Html.ActionLink("Delete", "Delete", new { item.RoleId })
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger text-center alert-custom">
        <p class="help-block">
            <i class="fa fa-exclamation-triangle"></i>
            There are no items to display.
        </p>
    </div>

}

<div id="add-edit-box" class="modal fade" role="dialog">
</div>

@section Scripts{
    <script>


        function AddRole() {
        $.get('@Url.Action("Add","Role")').done(function (result) {
            $("#add-edit-box").html(result);
            $("#add-edit-box").modal("show");
            //$("#add-edit-box").trigger('focus');
            //$("#add-edit-box").modal('show');
        });
        }

        function EditRole() {
        $.get('@Url.Action("Edit","Role")').done(function (result) {
            $("#add-edit-box").html(result);
            $("#add-edit-box").modal("show");
            //$("#add-edit-box").trigger('focus');
            //$("#add-edit-box").modal('show');
        });
        }
    </script>
}