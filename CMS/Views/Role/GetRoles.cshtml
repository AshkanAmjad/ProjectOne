@model IEnumerable<Domain.Entities.Security.Model.Role>

@{
    ViewBag.Title = "DisplayRoles";
}

@section style{
    <style>
        a {
            text-decoration: none;
        }
        #delete a{
            color:white
        }
    </style>
}
<div class="btn btn-primary btn-sm" style="margin:1rem 2rem 1rem 0;width:10rem;font-weight:bold">
    <i class="fa fa-users" style="margin-right:1rem"></i>
    Roles
</div>

<hr />

<div class="btn btn-primary btn-sm" style="margin:1rem 2rem 1rem 0;width:10rem;font-weight:bold" onclick="window.open()">
    <i class="fa fa-plus" style="margin-right:1rem"></i>
    Add
</div>

@*if (ViewBag.roleExistMessage)*@
@if (Model != null && Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:50%;margin:0 auto;">
            <thead >
                <tr>
                    <th scope="col" class="text-center">Title</th>
                    <th scope="col" class="text-center">Operations</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>
                            <div style="display:flex;justify-content:center;">
                                <div class="btn btn-warning" style="font-weight:bold;margin-right:1rem" onclick="">
                                    <i class="fa fa-edit" style="margin-right:1rem"></i>
                                    Edit
                                </div>
                                <div class="btn btn-danger" style="font-weight:bold" id="delete">
                                    <i class="fa fa-times" style="margin-right:1rem"></i>
                                    @Html.ActionLink("Delete", "DeleteRole", new { item.RoleId })
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-danger text-center" style="margin:0 auto; width:50%;">
            <p class="help-block">
                <i class="fa fa-exclamation-triangle"></i>
                There are no items to display.
            </p>
        </div>

    }
