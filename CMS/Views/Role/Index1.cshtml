@model List<Domain.Entities.Security.Model.Role>

@{
    ViewBag.Title = "DisplayRoles";
}

@section style{
    <style>
        a {
            text-decoration: none;
        }

        #delete a {
            color: white
        }

        .add-form {
            display: none;
        }

        .edit-form {
            display: none;
        }

        .add-btn {
            margin: 1rem 2rem 1rem 0;
            width: 10rem;
            font-weight: bold;
        }

        .edit-btn {
            font-weight: bold;
            margin-right: 1rem;
        }

        .delete-btn {
            font-weight: bold;
        }

        .panel-heading-custom {
            font-weight: bold;
        }

        .close-btn {
            cursor: pointer;
            color: red;
            position: absolute;
            right: 10px;
        }

        .panel-custom {
            width: 30%;
            position: absolute;
        }

        .btn-Roles {
            margin: 1rem 2rem 1rem 0;
            width: 10rem;
            font-weight: bold;
        }

        .btn-icons {
            margin-right: 1rem;
        }

        .justify-content-center {
            display: flex;
            justify-content: center;
        }

        .alert-custom {
            margin: 0 auto;
            width: 50%;
        }
    </style>
}
<div class="btn btn-primary btn-sm btn-Roles">
    <i class="fa fa-users btn-icons"></i>
    Roles
</div>

<hr />
<div class="btn btn-primary btn-sm add-btn btn-index-add-role">
    <i class="fa fa-plus btn-icons"></i>
    Add
</div>
@*if (ViewBag.roleExistMessage)*@
@if (Model != null && Model.Count() > 0)
{
    <table class="table table-bordered table-striped tbl-data-class" style="width:50%;margin:0 auto;">
        <thead>
            <tr>
                <th scope="col" class="text-center">Title</th>
                <th scope="col" class="text-center">Operations</th>
            </tr>
        </thead>
        <tbody class="text-center tbody-addRow">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>
                        <div style="display:flex;justify-content:center;">
                            @*<div class="btn btn-warning edit-btn" onclick="EditRole('@item.RoleId')" data-id="@item.RoleId" id="btn-edit-role">*@
                            <div class="btn btn-warning edit-btn btn-index-edit-role" data-roleid="@item.RoleId">
                                <i class="fa fa-edit btn-icons"></i>
                                Edit
                            </div>
                            <div class="btn btn-danger delete-btn btn-index-delete-role" data-roleid="@item.RoleId">
                                <i class="fa fa-times btn-icons"></i>
                                Delete
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger text-center alert-custom">
        <p class="help-block">
            <i class="fa fa-exclamation-triangle"></i>
            There are no items to display.
        </p>
    </div>

}

<div id="add-edit-delete-box" class="modal fade" role="dialog">

